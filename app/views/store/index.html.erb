<% if notice %>
<p id="notice class="alert alert-success"><%= notice %></p>
<% end %>
<h1 class="text-center"><%= t('.title_html') %></h1>
<% cache ['store', Product.latest] do %>
  <% @products.each do |product| %>
  <% cache ['entry', product] do %>
    <div class="entry border border-info">
    <%= image_tag(product.image_url, class: "img-fluid") %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description)  %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to t('.add_html'), line_items_path(product_id: product), remote:true, class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
<% end %>
<% end %>

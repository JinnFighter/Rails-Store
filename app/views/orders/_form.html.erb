<%= form_for(@order) do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('errors.template.header', count: @order.errors.count,
        model: t('activerecord.models.order')) %>.</h2>
        <p><%= t('errors.template.body') %></p>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" class="form-group">
    <%= form.label :name,  t('.name') %><br>
    <%= form.text_field :name, size: 40, class: "form-control"  %>
  </div>

  <div class="field" class="form-group">
    <%= form.label :address, t('.address_html') %><br>
    <%= form.text_area :address, rows: 3, cols: 40,  class: "form-control" %>
  </div>

  <div class="field" class="form-group">
    <%= form.label :email,  t('.email') %><br>
    <%= form.email_field :email, size: 40,  class: "form-control" %>
  </div>

  <div class="field" class="form-group" class="dropdown">
    <%= form.label :pay_type,  t('.pay_type') %><br>
    <%# form.select :pay_type, Order::PAYMENT_TYPES,
    prompt: t('.pay_prompt_html')%>
    <%= form.select( :pay_type, options_for_select(Order::PAYMENT_TYPES),
    prompt: t('.pay_prompt_html'), class: "dropdown-item") %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit'), class: "btn btn-primary" %>
  </div>
<% end %>
